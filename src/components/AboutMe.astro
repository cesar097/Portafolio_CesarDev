---
import ReactJS from "./icon/ReactJS.astro";
import TailwindIcon from "./icon/TailwindIcon.astro";
import TechIcon from "./icon/TechIcon.astro";
import HtmlIcon from "./icon/HtmlIcon.astro";
import CssIcon from "./icon/CssIcon.astro";
import AstroIcon from "./icon/AstroIcon.astro";
import JavascriptIcon from "./icon/JavascriptIcon.astro";
import BootstrapIcon from "./icon/BootstrapIcon.astro";
import GitIcon from "./icon/GitIcon.astro";
import FitmaIcon from "./icon/FigmaIcon.astro";
import AdobeIcon from "./icon/AdobeIcon.astro";
import LiContainer from "./LiContainer.astro";
import HobbiesIcon from "./icon/HobbiesIcon.astro";
import SoccerIcon from "./icon/SoccerIcon.astro";
import GymIcon from "./icon/GymIcon.astro";
import GameIcon from "./icon/GameIcon.astro";
import BookIcon from "./icon/BookIcon.astro";
import CodeIcon from "./icon/CodeIcon.astro";
import TravelIcon from "./icon/TravelIcon.astro";
---

<div
  class="max-w-3xl mx-auto grid md:grid-cols-2 md:items-center md:gap-4 gap-8 items-center justify-center"
>

<img
class="cardStyle size-[230px] md:mt-[-10px] transition-all duration-300 rounded-lg cursor-pointer 
filter grayscale hover:grayscale-0 lg:order-2 md:order-1 md:right-4 sm:mx-auto sm:text-center"
src="https://i.ibb.co/tp1jFS3/image.png"
alt="me"
/>

  <div class="md:order-2 lg:order-1">
    <h2 class="text-3xl font-bold mb-6 text-white">¿Quien soy?</h2>
    <p class="text-lg mb-4 text-pretty p-6 opacity-80 text-white">
      ¡Hola! Soy Cesar Ospino Agamez, un apasionado desarrollador frontend con
      experiencia en diversas tecnologías. Me enfoco en crear soluciones
      creativas y funcionales desde cero. Amante del deporte, siempre busco
      aprender nuevas habilidades y me sumerjo en la música para alimentar mi
      creatividad. Listo para enfrentar nuevos desafíos y evolucionar
      constantemente como desarrollador y como individuo creativo.
    </p>
  </div>

  
   
  </div>


<div class="flex flex-col lg:items-start sm:items-center mt-4">
  <h2 class="flex text-2xl text-[#64ffda] gap-x-2">
    <TechIcon class="size-8" />
    Tecnologias
  </h2>
</div>

<div class="m-8 flex items-center justify-center">
  <ul class="grid grid-cols-5 lg:flex gap-6">
    <LiContainer>
      <HtmlIcon class="size-10" />
    </LiContainer>

    <LiContainer>
      <CssIcon class="size-10" />
    </LiContainer>

    <LiContainer>
      <JavascriptIcon class="size-10" />
    </LiContainer>

    <LiContainer>
      <ReactJS class="size-10" />
    </LiContainer>

    <LiContainer>
      <AstroIcon class="size-10" />
    </LiContainer>

    <LiContainer>
      <TailwindIcon class="size-10" />
    </LiContainer>

    <LiContainer>
      <BootstrapIcon class="size-10" />
    </LiContainer>

    <LiContainer>
      <GitIcon class="size-10" />
    </LiContainer>

    <LiContainer>
      <FitmaIcon class="size-10" />
    </LiContainer>

    <LiContainer>
      <AdobeIcon class="size-10" />
    </LiContainer>
  </ul>
</div>

<div
  class="flex flex-col lg:items-start sm:items-center sm:size-6 sm:mt-2 sm:mb-4 mt-4 mb-8"
>
  <h2 class="flex text-lg sm:text-2xl text-[#64ffda] gap-x-2">
    <HobbiesIcon class="size-8" />
    Hobbies
  </h2>
</div>

<div class="m-8 flex items-center justify-center text-white">
  <ul
    class="grid lg:grid-cols-3 sm:grid-cols-2 gap-4 sm:gap-2 lg:gap-8 opacity-80"
  >
    <LiContainer class="hover:text-[#64ffda]">
      <SoccerIcon class="size-8 sm:size-10" />
      <h2 class="text-lg sm:text-2xl">Fútbol</h2>
    </LiContainer>

    <LiContainer>
      <GymIcon class="size-8 sm:size-10" />
      <h2 class="text-lg sm:text-2xl">Gimnasio</h2>
    </LiContainer>

    <LiContainer>
      <GameIcon class="size-8 sm:size-6" />
      <h2 class="text-lg sm:text-2xl">Videojuegos</h2>
    </LiContainer>

    <LiContainer>
      <BookIcon class="size-8 sm:size-10" />
      <h2 class="text-lg sm:text-2xl">Lectura</h2>
    </LiContainer>

    <LiContainer>
      <CodeIcon class="size-8 sm:size-10" />
      <h2 class="text-lg sm:text-2xl">Programación</h2>
    </LiContainer>

    <LiContainer>
      <TravelIcon class="size-8 sm:size-10" />
      <h2 class="text-lg sm:text-2xl">Viajar</h2>
    </LiContainer>
  </ul>
</div>
