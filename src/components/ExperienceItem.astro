---
const { title, description, link, date } = Astro.props;
---

<li class="mb-10 ms-4 relative">

  <div class="flex items-center justify-start align-middle gap-x-2">
  <div class="w-3 h-3 bg-[#64ffda] rounded-full mt-[-2px] -start-1.5 border border-[#64ffda] ">
  </div>
  <time class="mb-1 text-sm font-normal leading-none text-white ">{date}</time>
</div>
  <h3 class="text-lg font-semibold text-[#64ffda]">
    {title}
  </h3>
  <p class="mb-4 text-base font-normal text-gray-200 text-pretty">
    {description}
  </p>

  {link && (
    <a href={link} class="flex items-center boton space-x-2" target="_blank">
      <span  >Saber m√°s</span>
      <svg
        xmlns="http://www.w3.org/2000/svg"
        class="h-5 w-5 text-[#64ffda]"
        viewBox="0 0 20 20"
        fill="currentColor"
      >
        <path
          fill-rule="evenodd"
          d="M12.707 5.293a1 1 0 0 1 1.414 1.414L10 12.414l-4.121-4.12a1 1 0 1 1 1.415-1.415L10 9.586l2.293-2.293a1 1 0 0 1 1.414 0z"
        />
      </svg>
    </a>
  )}
</li>
