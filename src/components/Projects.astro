---
import NextJS from "./icon/NextJS.astro";
import TailwindIcon from "./icon/TailwindIcon.astro";
import AstroIcon from "./icon/AstroIcon.astro";
import ReactJS from "./icon/ReactJS.astro";
import Githubicon from "./icon/Githubicon.astro";
import JavascriptIcon from "./icon/JavascriptIcon.astro";
import CssIcon from "./icon/CssIcon.astro";
import HtmlIcon from "./icon/HtmlIcon.astro";
import VisualIcon from "./icon/VisualIcon.astro";


const TAGS = {
  NEXT: {
    name: "Next.js",
    class: "bg-black text-white",
    icon: NextJS,
  },

  TAILWIND: {
    name: "Tailwind",
    class: "bg-white text-[#0891b2]",
    icon: TailwindIcon,
  },

  ASTRO: {
    name: "Astro",
    class: "bg-[#fb923c] text-white",
    icon: AstroIcon,
  },

  REACT: {
    name: "React",
    class: "bg-white text-[#06b6d4]",
    icon: ReactJS,
  },

  JAVASCRIPT: {
    name: "JavaScript",
    class: "bg-black text-[#F1C40F]",
    icon: JavascriptIcon
  },

  CSS: {
    name: "CSS",
    class: "bg-[#0891b2] text-white",
    icon: CssIcon
  },

  HTML: {
    name: "HTML",
    class: "bg-[#E56D40] text-black",
    icon: HtmlIcon
  }
};

const PROJECTS = [
  {
    title: "Github Search Profile",
    description:
      "buscador de perfiles de github hecho con html css y javascript.",
    link: "https://github-search-nu-black.vercel.app/",
    github: "https://github.com/cesar097/github_search",
    image: "./src/components/img/githubsearch.png",
    tags: [TAGS.HTML, TAGS.TAILWIND, TAGS.JAVASCRIPT],
  },

  {
    title: "React-taks-app",
    description:
      "crea tareas, almacenalas, modificalas, terminalas y eliminalas todo eso en una app.",
    link: "https://create-task-com.vercel.app/",
    github: "https://github.com/cesar097/create-task",
    image: "./img/444.png",
    tags: [TAGS.HTML, TAGS.REACT, TAGS.CSS],
  },

  {
    title: "Rick and Morty API",
    description:
      "listado de todos los personajes de Rick and Morty con buscador incorporado, hecho con html css y javascript.",
    link: "https://rick-and-morty-api-com.vercel.app/",
    github: "https://github.com/cesar097/RickAndMortyApi",
    image: "./img/rickandmorty.jpg",
    tags: [TAGS.JAVASCRIPT, TAGS.CSS, TAGS.HTML],
  },

  {
    title: "POKEDEX",
    description:
      "Pokedex de la primera generacion de pokemos, puedes buscarlo por su nombre o numero de id.",
    link: "https://pokedexpro-com.vercel.app/",
    github: "https://github.com/cesar097/pokedexPro",
    image: "./img/pokedex.png",
    tags: [TAGS.JAVASCRIPT, TAGS.CSS, TAGS.HTML],
  },
];
---



{
PROJECTS.map(({ title, description, link, github, image, tags }) => (
    <article class="size-[370px] border-title text-white rounded-md shadow-lg flex flex-col items-center justify-center gl:ml-6 mr-6 cardStyle">
      <img class="w-full h-full rounded-top-md shadow-md" src={image} alt={title} />
      <div class="p-2 ">
        <span class="flex justify-between items-center hover:text-[#64ffda]">
          <h3 class="text-2xl font-bold text-title mb-2 mt-2">{title}</h3>

          <div class="flex space-x-2 justify-center items-center">
          <a href={link} target="_blank" rel="noopener noreferrer">
            <VisualIcon class="size-8 cursor-pointer" />
          </a>          
          <a href={github} target="_blank" rel="noopener noreferrer">
            <Githubicon class="size-6 cursor-pointer" />
          </a>
        </div>
        </span>

        <p class="text-gray-300 mb-4">{description}</p>
        <ul class="flex flex-row gap-x-4">
          {tags.map((tag) => (
            <li >
              <span
                class={`flex gap-x-2 rounded-full text-xs py-1 px-2 ${tag.class}`}
              >
                <tag.icon class="size-5" />
                {tag.name}
              </span>
            </li>
          ))}
        </ul>
      </div>
    </article>
  ))} 
