---
import Footer from "../components/Footer.astro";
import HeaderNavbar from "../components/HeaderNavbar.astro";


interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es" >
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon"  href="./img/c-logo.png" />
    <meta name="generator" content={Astro.generator} />

  <script src="https://kit.fontawesome.com/d4fea1bc27.js" crossorigin="anonymous"></script>
  
    <title>CesarDev</title>
  </head>
  <body class="px-5">
    <HeaderNavbar></HeaderNavbar>
    <slot />
    <Footer />
   
  </body>

</html>
<style is:global>



  #check:checked ~ul {
    left: 0;
    position: absolute;
  }
  :root {
    color-scheme: light dark;
  }
  html {
    background: #0a192f;
    font-family: monospace;
    scroll-behavior: smooth;
  }



  body {
    background: #0a192f;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    min-height: 100vh;
  }

  .boton {
    background-color: #0a192f;
    color: #ffffff;
    width: 150px;
    height: 50px;
    padding: 10px 20px;
    border: 1px solid #64ffda;
    border-radius: 4px;
    transition:
      transform 0.2s ease-in-out,
      box-shadow 0.2s ease-in-out;
    margin-right: 10px;
    margin-bottom: 10px;
  }

  .boton:hover {
    color: #64ffda;
    transform: translate(-2px, -2px);
    box-shadow: 2px 2px 2px #64ffda;
    margin-right: 12px;
    margin-bottom: 12px;
  }

  .boton:hover::before {
    transform: translateY(0%);
  }

  .botonw2 {
    width: auto;
  }

  .cardStyle {
    background-color: #0a192f;
    color: #ffffff;
    border: 1px solid #64ffda;
    border-radius: 4px;
    transition:
      transform 0.2s ease-in-out,
      box-shadow 0.2s ease-in-out;
    margin-right: 10px;
    margin-bottom: 10px;
  }

  .cardStyle:hover {
    transform: translate(-2px, -2px);
    box-shadow: 2px 2px 2px #64ffda;
    margin-right: 14px;
    margin-bottom: 1px;
  }

  .cardStyle:hover::before {
    transform: translateY(0%);
  }
  

  @media (prefers-reduce-motion: reduce) {
    html {
      scroll-behavior: auto;
    }
  }
</style>
